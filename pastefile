public class YourRepository
{
    private readonly ApplicationDbContext _context;

    public YourRepository(ApplicationDbContext context)
    {
        _context = context;
    }

    public List<SourceModel> GetSources()
    {
        return _context.Sources
            .FromSqlRaw("EXEC YourStoredProcedure @MA = {0}", "M")
            .Select(s => new SourceModel { REF_ID = s.REF_ID, REF_DESC = s.REF_DESC })
            .ToList();
    }
}
