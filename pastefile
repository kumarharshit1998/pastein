using Microsoft.AspNetCore.Mvc;
using System.Threading.Tasks;

public class AutofillController : Controller
{
    private readonly ManualAutoFillRepository _repository;

    public AutofillController(ApplicationDbContext context)
    {
        _repository = new ManualAutoFillRepository(context);
    }

    [HttpGet]
    public IActionResult ManualAdd()
    {
        return View(new ManualAutoFillModel());
    }

    [HttpPost]
    public async Task<IActionResult> ManualAdd(ManualAutoFillModel model)
    {
        if (ModelState.IsValid)
        {
            string lmdbid = await _repository.ManualAddProspectAsync(model);
            ViewBag.LMDBID = lmdbid;
        }

        return View(model);
    }
}
