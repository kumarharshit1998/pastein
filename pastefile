public class YourController : Controller
{
    private readonly YourRepository _repository;

    public YourController(YourRepository repository)
    {
        _repository = repository;
    }

    [HttpGet]
    public IActionResult YourView()
    {
        var model = new YourViewModel
        {
            Sources = _repository.GetSources() // Fetch data from stored procedure
        };
        return View(model);
    }

    [HttpPost]
    public IActionResult YourView(YourViewModel model)
    {
        ViewBag.Message = $"Account: {model.AccountNumber}, Source: {model.SelectedSource}, Status: {model.SelectedStatus}, Assignment: {model.AssignmentType}";

        // Reload dropdown values after form submission
        model.Sources = _repository.GetSources();
        model.StatusList = new List<string> { "Value 1", "Value 2", "Value 3", "Value 4" };

        return View(model);
    }
}
