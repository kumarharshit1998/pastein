<%
' Define your connection string
Dim conn, sqlInsert, gCompBRPRec

' Capture the form value
gCompBRPRec = Request.Form("gCompBRPRec")

' Check if the form value is not empty
If Not IsEmpty(gCompBRPRec) Then
    ' Create a connection object
    Set conn = Server.CreateObject("ADODB.Connection")
    
    ' Open the connection to the database
    conn.Open "Provider=SQLOLEDB;Data Source=dev-dersql;Initial Catalog=YourDatabaseName;User ID=YourUsername;Password=YourPassword;"
    
    ' Define the SQL Insert command
    sqlInsert = "INSERT INTO YourTableName (DateColumn) VALUES ('" & gCompBRPRec & "')"
    
    ' Execute the SQL command
    conn.Execute(sqlInsert)
    
    ' Close the connection
    conn.Close
    Set conn = Nothing
End If
%>

<form method="post">
    <table>
        <tr>
            <td colspan="12" class="clsFormHeader">&nbsp; &nbsp; Statuses</td>
        </tr>
        <tr>
            <td align="right" class="clsFieldNames" nowrap>Approval Letter Sent:</td>
            <td>
                <!-- Input field for the date -->
                <input type="text" name="gCompBRPRec" value="<%=gCompBRPRec%>">
            </td>
        </tr>
        <tr>
            <td align="right" class="clsFieldNames" nowrap>No Interest or No Reply:</td>
            <td>
                <!-- Your existing function to draw the UI component -->
                <% DrawVesorNo("nointnorep", gNoIntNoRep, gNoIntNoRepDate, gNoIntNoRepUser) %>
            </td>
        </tr>
    </table>
    <input type="submit" value="Submit">
</form>
