using System;
using System.Text.RegularExpressions;

// Function to sanitize user input
public static string SanitizeInput(string input)
{
    return Regex.Replace(input, @"[^\w\s@.-]", "_");
}

// Example usage
string sanitizedEmail = SanitizeInput(UserData.CognitoUserEmail);
_Logger.LogWarning($"Error Status returned from RMS Service while performing TIN Search. Search performed by: {sanitizedEmail}");
